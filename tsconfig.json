{
	"ts-node": {
		"transpileOnly": true
	},
	"compilerOptions": {
		"declaration": true,
		"forceConsistentCasingInFileNames": true,
		"importHelpers": true,
		"esModuleInterop": true,
		"module": "commonjs",
		"outDir": "./dist",
		"rootDirs": [
			"./src"
		],
		"strict": true,
		"lib": [
			"ES2019"
		],
		"target": "es2017",
		"allowSyntheticDefaultImports": true
	},
	"include": [
		"./src/**/*"
	]
}
