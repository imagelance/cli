{
	"ts-node": {
		"transpileOnly": true
	},
	"compilerOptions": {
		"declaration": true,
		"forceConsistentCasingInFileNames": true,
		"importHelpers": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"module": "commonjs",
		"outDir": "./dist",
		"rootDirs": [
			"./src"
		],
		"strict": true,
		"lib": [
			"es2021"
		],
		"target": "es2017",
		"allowSyntheticDefaultImports": true
	},
	"include": [
		"./src/**/*"
	],
	"exclude": [
		"node_modules"
	]
}
