{
	"rules": {
		"camelcase": "off",
		"no-process-exit": "off",
		"unicorn/no-process-exit": "off",
		"no-async-promise-executor": "off",
		"no-await-in-loop": "off",
		"arrow-parens": [
			"error",
			"always"
		],
		"indent": [
			"error",
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"semi": [
			"warn",
			"always"
		],
		"object-curly-spacing": [
			"error",
			"always"
		],
		"node/no-missing-import": [
			"error",
			{
				"allowModules": [],
				"resolvePaths": [
					"/src"
				],
				"tryExtensions": [
					".js",
					".json",
					".node",
					".ts",
					".d.ts"
				]
			}
		]
	},
	"extends": [
		"oclif",
		"oclif-typescript"
	]
}
